<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.theta360.sample.v2.view.MJpegView
        android:id="@+id/live_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="100%w"
        app:layout_heightPercent="70%w"/>

    <Button
        android:id="@+id/btn_shoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="50%w"
        app:layout_heightPercent="50%w"
        app:layout_marginTopPercent="60%"
        app:layout_marginLeftPercent="25%"
        android:text="拍照"/>

</com.zhy.android.percent.support.PercentFrameLayout>